<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FechaFavRestauranteActivity">
    <TextView
        android:id="@+id/atrasComment"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        app:drawableLeftCompat="@drawable/ic_baseline_navigate_before_24" />
    <EditText
        android:id="@+id/FAVId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="20dp"
        android:inputType="text"
        android:hint="ID FAV"
        android:autofillHints="name"
        android:visibility="gone"/>
    <EditText
        android:id="@+id/fechaRestaurante"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="20dp"
        android:inputType="text"
        android:hint="Ingresa la ultima fecha de tu visita"
        android:autofillHints="name"
        android:visibility="visible"/>
    <Button
        android:id="@+id/btn_fechaRes"
        android:layout_margin="10dp"
        android:background="@color/header"
        android:textSize="20sp"
        android:text="Agregar Fecha"
        android:textColor="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>